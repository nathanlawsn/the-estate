---
import Container from "./Container.astro";
import { Picture } from "@astrojs/image/components";

const { items } = Astro.props;
---

<section class="py-20">
    <Container>
        <h2 class="font-medium text-3xl mb-9">Gallery</h2>
        <div class="grid md:grid-cols-6 md:grid-rows-7 gap-4">
            <div
                class="bg-orange-300 md:col-span-4 md:row-span-3 aspect-[831/554] overflow-hidden"
            >
                <Picture
                    src={items[0].image.url}
                    widths={[768, 1024]}
                    aspectRatio="831:554"
                    fit="cover"
                    sizes="(max-width: 768px) 100vw, 1024px"
                    alt={items[0].image.alt}
                    class="hover:scale-105 duration-1000 ease-in-out"
                />
            </div>
            <div
                class="bg-orange-400 md:col-span-2 md:row-span-2 md:col-start-5 aspect-[577/385] overflow-hidden"
            >
                <Picture
                    src={items[1].image.url}
                    widths={[768, 1024]}
                    aspectRatio="577:385"
                    fit="cover"
                    sizes="(max-width: 768px) 100vw, 1024px"
                    alt={items[1].image.alt}
                    class="hover:scale-105 duration-1000 ease-in-out"
                />
            </div>
            <div
                class="bg-orange-500 md:col-span-2 md:row-span-5 md:col-start-5 md:row-start-3 aspect-[577/766] overflow-hidden"
            >
                <Picture
                    src={items[2].image.url}
                    widths={[768, 1024]}
                    aspectRatio="577:766"
                    fit="cover"
                    sizes="(max-width: 768px) 100vw, 1024px"
                    alt={items[2].image.alt}
                    class="hover:scale-105 duration-1000 ease-in-out"
                />
            </div>
            <div
                class="bg-orange-600 md:col-span-2 md:row-span-4 md:row-start-4 aspect-[401/597] overflow-hidden"
            >
                <Picture
                    src={items[3].image.url}
                    widths={[940]}
                    aspectRatio="401:597"
                    fit="cover"
                    sizes="(max-width: 768px) 100vw, 1024px"
                    alt={items[3].image.alt}
                    class="hover:scale-105 duration-1000 ease-in-out"
                />
            </div>
            <div
                class="bg-orange-700 md:col-span-2 md:row-span-4 md:col-start-3 md:row-start-4 aspect-[401/597] overflow-hidden"
            >
                <Picture
                    src={items[4].image.url}
                    widths={[940]}
                    aspectRatio="401:597"
                    fit="cover"
                    sizes="(max-width: 768px) 100vw, 1024px"
                    alt={items[4].image.alt}
                    class="hover:scale-105 duration-1000 ease-in-out"
                />
            </div>
        </div>
    </Container>
</section>
