---
import { Icon } from "astro-icon";
import { Picture } from "@astrojs/image/components";

const {
	heading,
	imageLeftUrl,
	imageLeftAlt,
	imageRightUrl,
	imageRightAlt,
	buttonUrl,
	buttonText,
	buttonTarget,
} = Astro.props;
---

<section
	class="grid grid-cols-1 lg:grid-cols-2 relative h-[75dvh] max-lg:max-h-[50rem]"
>
	<div class="bg-slate-700 relative group overflow-hidden cursor-pointer">
		<Picture
			src={imageLeftUrl}
			widths={[768, 1024]}
			aspectRatio="809:887"
			sizes="(max-width: 768px) 100vw, 1024px"
			alt={imageLeftAlt}
			class="object-cover w-full h-full group-hover:scale-110 duration-[3000ms] transition-transform block"
			loading="eager"
		/>
	</div>

	<div class="bg-slate-600 hidden lg:block group overflow-hidden">
		<Picture
			src={imageRightUrl}
			widths={[768, 1024]}
			aspectRatio="809:887"
			sizes="(max-width: 768px) 100vw, 1024px"
			alt={imageRightAlt}
			class="object-cover w-full h-full group-hover:scale-110 duration-[3000ms] transition-transform block"
			loading="eager"
		/>
	</div>

	{
		heading && (
			<h1 class="md:text-[3.125rem]/[2.5rem] text-white font-medium text-center left-0 right-0 text-4xl absolute top-1/2 -translate-y-1/2 px-10">
				{heading}
			</h1>
		)
	}
</section>
{
	buttonUrl && (
		<div>
			<a
				class="bg-primary-orange group text-white font-medium flex items-center gap-5 justify-between sm:gap-[4.75rem] px-5 md:px-11 py-3 min-h-[5rem] sm:min-h-[6.25rem] w-full hover:bg-primary-purple transition-colors duration-500 ease-in-out"
				href={buttonUrl}
				target={buttonTarget}
				data-push="both"
			>
				<span class="text-2xl sm:text-[2.125rem]">{buttonText}</span>
				<span class="block w-6 h-6 sm:w-8 sm:h-8 group-hover:rotate-45 duration-500 ease-in-out">
					<Icon name="arrow" />
				</span>
			</a>
		</div>
	)
}
