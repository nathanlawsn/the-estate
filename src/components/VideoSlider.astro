---
import { Icon } from "astro-icon";
import { Picture } from "@astrojs/image/components";
import Container from "./Container.astro";
import VideoModal from "../components/react/VideoModal";
import TextCarouselSwiper from "./react/TextCarouselSwiper";

const { videoUrl, videoThumbnailUrl, videoThumbnailAlt, items } = Astro.props;
---

<section
	class="relative before:top-0 before:h-1/2 before:left-0 before:right-0 before:absolute before:bg-white"
>
	<Container>
		<div
			class="bg-[#522D43] text-white grid grid-cols-1 lg:grid-cols-[minmax(0,_4fr)_minmax(0,_3fr)] p-10 md:py-[5.375rem] md:px-[4.125rem] lg:p-10 xl:py-[5.375rem] xl:px-[4.125rem] gap-12 md:gap-20 lg:gap-12 xl:gap-20 relative overflow-hidden"
		>
			<div
				class="aspect-[696/640] bg-black flex items-center justify-center relative"
			>
				<Picture
					src={videoThumbnailUrl}
					widths={[400, 696]}
					aspectRatio="696:640"
					sizes="(max-width: 696px) 100vw"
					alt={videoThumbnailAlt}
					class="object-cover w-full h-full"
				/>
				<VideoModal url={videoUrl} client:idle />
			</div>

			<TextCarouselSwiper client:visible items={items} />

			<Icon
				class="hidden lg:block absolute -right-20 bottom-20 xl:bottom-40 max-w-[77.375rem]"
				name="illustration-canoeing"
			/>
		</div>
	</Container>
</section>
