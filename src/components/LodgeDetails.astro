---
import Container from "./Container.astro";
import ImageCarousel from "./ImageCarousel.astro";
import Accordion from "../components/react/Accordion";
import { Icon } from "astro-icon";

const { tabs, description, carousel, url } = Astro.props;
---

<section class="pb-16 md:py-20">
    <Container>
        <div
            class="grid grid-cols-1 md:grid-cols-2 gap-10 lg:gap-20 xl:gap-36 lg:grid-cols-[minmax(0,_30.25rem)_minmax(0,_auto)]"
        >
            <div>
                <h2 class="font-medium text-3xl mb-10">
                    Additional information
                </h2>

                {
                    tabs && (
                        <ul class="text-xl mb-14">
                            {tabs.map((tab) => (
                                <Accordion
                                    title={tab.tab_heading}
                                    content={tab.tab_content}
                                    client:visible
                                />
                            ))}
                        </ul>
                    )
                }

                {description && <p class="text-base">{description}</p>}

                {
                    url && (
                        <div class="mt-14 group">
                            <a
                                class="bg-orange-400 text-white flex items-center gap-5 justify-between sm:gap-[4.75rem] px-6 py-7 w-full group-hover:bg-primary-purple transition-colors duration-500"
                                href={url}
                            >
                                <span class="text-3xl">Book your stay</span>
                                <span class="block w-6 h-6 group-hover:rotate-45 duration-500 ease-in-out">
                                    <Icon name="arrow" />
                                </span>
                            </a>
                        </div>
                    )
                }
            </div>

            {carousel && <ImageCarousel items={carousel} />}
        </div>
    </Container>
</section>
