---
import QuoteSlider from "../components/react/QuoteSlider";

let res = await fetch(`${import.meta.env.API_URL}/wp-json/options/all`);
let items = await res.json();
---

<section class="bg-white mt-24">
	<QuoteSlider client:visible items={items} />
</section>

<style is:global>
	:root {
		--swiper-theme-color: #ff834b !important;
		--swiper-pagination-progressbar-size: 7px;
	}
	.swiper-horizontal > .swiper-pagination-progressbar,
	.swiper-pagination-progressbar.swiper-pagination-horizontal {
		@apply !top-auto bottom-0;
	}
	.swiper-pagination-progressbar .swiper-pagination-progressbar-fill {
		@apply rounded-r-full;
	}
	#video-swiper .swiper-pagination-progressbar {
		@apply bg-white rounded-full h-[3px];
	}
	#video-swiper
		.swiper-pagination-progressbar
		.swiper-pagination-progressbar-fill {
		@apply rounded-full;
	}
</style>
