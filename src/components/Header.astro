---
import Button from "./Button.astro";
import Container from "./Container.astro";
import Logo from "./Logo.astro";
import Navigation from "./Navigation.astro";

const { nav } = Astro.props;

let res = await fetch(
    "http://theestate.cargo/wp-json/menus/v1/menus/primary-navigation"
);
let menu = await res.json();
---

<header class="bg-white py-[1.875rem]">
    <Container>
        <div class="flex items-center justify-between gap-4">
            <a href="/">
                <Logo />
            </a>
            <div class="flex justify-end gap-20">
                {nav && <Navigation items={menu.items} />}
                <Button
                    text="Book now"
                    url="https://patterdalehallestate.anytimebooking.eu/place_booking/#forward"
                    arrow
                />
            </div>
        </div>
    </Container>
</header>
